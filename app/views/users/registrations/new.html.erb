<div id="content">
  <div class="container">
    <!-- Sign Up form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-login form-wrapper form-medium"}) do |f| %>
 
      <h3 class="title-divider">
        <span>Sign Up</span> 
      </h3>
      <h5>
        <p><%= devise_error_messages!%></p>
      </h5>

      <div class="form-group">
          <%= f.label :First_Name, class: "control-label" %>
            <%= f.text_field :first_name, class: "form-control",autofocus: true, required: true %>
      </div>
  
    <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
      </div>            
            
    <div class="form-group">
          <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
      </div>

    <div class="form-group">
          <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control" %>
      </div>
      <button class="btn btn-primary" type="submit">Sign up</button>
    <% end %>
  </div>
</div>
