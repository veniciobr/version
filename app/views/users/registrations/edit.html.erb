<div id="content">
  <div class="container">
    <!-- Sign Up form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), url: registration_path(resource_name), html: { method: :put }, :html => {:class => "form-login form-wrapper form-medium"}) do |f| %>
 
      <h3 class="title-divider">
        <span>Edit <%= resource_name.to_s.humanize %></span> 
      </h3>
      <h5>
        <p><%= devise_error_messages!%></p>
      </h5>

      <div class="form-group">
          <%= f.label :First_Name, class: "control-label" %>
            <%= f.text_field :first_name, class: "form-control",autofocus: true, required: true %>
      </div>
  
    <div class="form-group">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
      </div>            
            
    <div class="form-group">
          <%= f.label :password, class: "control-label" %>
            <%= f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false , class: "form-control" %>
      </div>

    <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", required: false, class: "form-control" %>
      </div>
    <div class="form-group">
          <%= f.label :current_password, class: "control-label" %>
          <%= f.password_field :current_password, required: true, hint: "we need your current password to confirm your changes",  class: "form-control" %>
      </div>          

      <button class="btn btn-primary" type="submit">Update</button>
      <%= link_to "Back", :back, class: "btn btn-danger" %>
      <h3>Cancel my account</h3>
          <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <% end %>
  </div>
</div>