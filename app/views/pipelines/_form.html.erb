<%= form_for(@pipeline) do |f| %>

  <% if @pipeline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pipeline.errors.count, "error") %> prohibited this pipeline from being saved:</h2>
      <ul>
      <% @pipeline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :placeholder => "Project Name", :tabindex => 1, :required => true, class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.label :comments %><br>
      <%= f.text_area :comments, :rows => "5", :placeholder => "Comments", :tabindex => 1, :required => true, class:"form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.button "Confirm", class: "btn btn-large btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."} %>
      <%= link_to "Cancel", :back, {:class=>"btn btn-danger"} %>
    </div>
  </div>
<% end %>